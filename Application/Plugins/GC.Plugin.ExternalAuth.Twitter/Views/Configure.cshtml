@model Nop.Plugin.ExternalAuth.Twitter.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Nop.Core.IWebHelper webHelper

<form asp-controller="TwitterAuthentication" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @T("Plugins.ExternalAuth.Twitter.Instructions")
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ConsumerKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ConsumerKey" />
                        <span asp-validation-for="ConsumerKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ConsumerSecret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ConsumerSecret" />
                        <span asp-validation-for="ConsumerSecret"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div> 
</form>